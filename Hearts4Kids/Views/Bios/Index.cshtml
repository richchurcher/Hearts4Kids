@model IEnumerable<Hearts4Kids.Models.BioSummaryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CitationDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MainTeamPage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approved)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CitationDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MainTeamPage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Approved)
        </td>
        <td>
            @Html.ActionLink("Edit Bio", "CreateEditBio", new { id = item.UserId }) |
            @Html.ActionLink("Edit Summary", "UpdateDetails", new { id = item.UserId })
        </td>
    </tr>
}

</table>
